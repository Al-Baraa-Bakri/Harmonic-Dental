---
// Critical CSS - Inline only the most essential styles
// This will be injected in the <head> for fast first paint
---

<style is:inline>
  /* Critical CSS for above-the-fold content */
  
  /* Reset & Base */
  *, *::before, *::after {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  :root {
    --background: 210 15% 97%;
    --foreground: 215 15% 20%;
    --primary: 152 75% 40%;
    --primary-foreground: 0 0% 100%;
    --border: 220 12% 88%;
  }

  html {
    -webkit-text-size-adjust: 100%;
    font-family: 'Inter', system-ui, -apple-system, sans-serif;
    line-height: 1.5;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  body {
    background-color: hsl(var(--background));
    color: hsl(var(--foreground));
    min-height: 100vh;
  }

  /* Critical Header Styles */
  header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 50;
    background-color: hsl(var(--background) / 0.8);
    backdrop-filter: blur(12px);
    border-bottom: 1px solid hsl(var(--primary) / 0.1);
  }

  /* Critical Hero Section Styles */
  .hero-section {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    overflow: hidden;
    padding-top: 5rem;
  }

  /* Hide content until styles load to prevent FOUC */
  main {
    opacity: 1;
  }

  /* Critical animation keyframes for hero */
  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes scale-in {
    from {
      transform: scale(0.95);
    }
    to {
      transform: scale(1);
    }
  }

  /* Utility: hide/show based on screen size */
  @media (max-width: 1023px) {
    .lg\\:hidden {
      display: none;
    }
  }

  @media (min-width: 1024px) {
    .hidden.lg\\:flex {
      display: flex;
    }
    .hidden.lg\\:block {
      display: block;
    }
  }
</style>

