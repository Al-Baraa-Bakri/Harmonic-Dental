---
import { Header } from "@/components/Header";
import "../styles/global.css";
import Footer from "@/sections/Footer";
import ContactUs from "@/sections/ContactUs";
import { getHeaderNavigation } from "@/lib/api/header";
import { getFooter } from "@/lib/api/footer";
import { getContactSection } from "@/lib/api/contact";
import SEO from "@/components/SEO.astro";
import CriticalCSS from "@/components/CriticalCSS.astro";

export interface Props {
  title?: string;
  description?: string;
}

const { title, description } = Astro.props;

const headerData = await getHeaderNavigation();
const footerData = await getFooter();
const contactData = await getContactSection();
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Harmonic Dental</title>
    <link rel="icon" href="/logo.svg?v=2" type="image/svg+xml" />
    
    <!-- Critical CSS inlined for fast first paint -->
    <CriticalCSS />
    
    <SEO title={title} description={description} />
    
    <!-- DNS Prefetch & Preconnect for external domains -->
    <link rel="dns-prefetch" href="https://fonts.googleapis.com" />
    <link rel="dns-prefetch" href="https://fonts.gstatic.com" />
    <link rel="dns-prefetch" href="https://legendary-delight-abce3e6fc0.media.strapiapp.com" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="preconnect" href="https://legendary-delight-abce3e6fc0.media.strapiapp.com" crossorigin />
    
    <!-- Optimized Font Loading: preload key fonts, defer loading with display=swap -->
    <link rel="preload" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&family=Karla:wght@400;500;600;700;800&display=swap" as="style" onload="this.onload=null;this.rel='stylesheet'" />
    <noscript>
      <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&family=Karla:wght@400;500;600;700;800&display=swap" rel="stylesheet" />
    </noscript>
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "MedicalBusiness",
      "name": "Harmonic Dental",
      "description": "Your trusted partner for precision-crafted crowns, bridges, implants, and veneers. We combine artistry with technology for exceptional results.",
      "url": "https://www.harmonicdl.com",
      "logo": "https://www.harmonicdental.com/logo.png",
      "image": "https://www.harmonicdental.com/logo.png",
      "telephone": "+971 502298321", 
      "address": {
        "@type": "PostalAddress",
        "addressLocality": "Abu Dhabi, United Arab Emirates",
        "addressRegion": "Abu Dhabi City",
        "postalCode": "00000",
        "addressCountry": "UAE"
      },
      "openingHours": "Mon-Sat 08am-7pm",
      "sameAs": [
        "https://www.facebook.com/harmonicdentallab",
        "https://https://www.instagram.com/harmonicdentallab/",
        "https://www.youtube.com/shorts/ucYA_YBliBY"
      ]
    })}>
    </script>
  </head>
  <body>
    <Header {...headerData}/>
      <main>
        <slot />
      </main>
    <ContactUs {...contactData}/>
    <Footer {...footerData} />
  </body>
</html>
